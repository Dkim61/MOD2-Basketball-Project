<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :user_name %>
  <%= f.text_field :user_name %><br>
  <br>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %><br>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <br>
  <%= f.label :age %>
  <%= f.number_field :age %><br>
  <br>
  <%= f.submit %>
  <% end %>

